  "version": "0.2.0",
  "configurations": [

    {
      "name": "(gdb) Launch for simple_sfm",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/app/simple_sfm",
      "args": ["-d",
               "~/workspace/3rdParty/SfM_quality_evaluation/Benchmarking_Camera_Calibration_2008/fountain-P11/test_images"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}